<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/needHelp"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".NeedHelpActivity">

    </fragment>

    <Button
        android:id="@+id/needHelp"
        android:layout_width="211dp"
        android:layout_height="55dp"
        android:layout_marginTop="504dp"
        android:background="@drawable/edit_text_border"
        android:text="Want Help"
        app:backgroundTint="#3A58C0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="164dp"
        android:layout_height="1dp"
        android:layout_marginTop="40dp"
        android:background="#3A58C0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/needHelp" />

    <Button
        android:id="@+id/Donate"
        android:layout_width="211dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_text_border"
        android:text="Want To Help"
        app:backgroundTint="#3A58C0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="0.02" />
</androidx.constraintlayout.widget.ConstraintLayout>